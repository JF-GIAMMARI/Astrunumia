  <div id="liens">
    <a id="a1h" href="/accueil">Accueil </a>
    <a id="a2h" href="/passager/vote">Votes</a>
    <a id="a3h" href="/equipage">Équipage</a>
    <a id="a4h" href="/passager/authentification">Mon Pass</a>
  </div>

  <script>
    // Animation du menu Mobile
    var link = document.getElementById("liens");
    function switchmenu() {
      Haptics.vibrate(10);
      
      if (link.style.display === "flex") {
        gsap.to("#a4h",{ duration: 0.6, opacity: 0, y: 0, delay: 0});
        gsap.to("#a3h",{ duration: 0.6, opacity: 0, y: 0, delay: 0.1 });
        gsap.to("#a2h",{ duration: 0.6, opacity: 0, y: 0, delay: 0.2 });
        gsap.to("#a1h",{ duration: 0.6, opacity: 0, y: 0, delay: 0.3 ,onComplete:switchdisplay  });
        gsap.to(link,{ duration: 0.6, opacity: 0, delay: 0.3 });

        
        
      } else {
        link.style.display = "flex";
        gsap.fromTo(link,{ opacity: 0,},{ duration: 0.6, opacity: 1, delay: 0.4 });
        gsap.fromTo("#a1h", { opacity: 0, y: -200 }, { duration: 0.6, opacity: 1, y: 0, delay: 0 });
        gsap.fromTo("#a2h", { opacity: 0, y: -150 }, { duration: 0.5, opacity: 1, y: 0, delay: 0.2 });
        gsap.fromTo("#a3h", { opacity: 0, y: -100 }, { duration: 0.4, opacity: 1, y: 0, delay: 0.4 });
        gsap.fromTo("#a4h", { opacity: 0, y: -50 }, { duration: 0.3, opacity: 1, y: 0, delay: 0.6 });
      }
    }

    function switchdisplay(){
      link.style.display = "none";
    }
    
  </script>
</div>