<script>
      var btn1 = document.getElementById("accueilbtn");
      btn1.addEventListener("click",click1);
      var btn2 = document.getElementById("votebtn");
      btn2.addEventListener("click",click2);
      var btn3 = document.getElementById("equipagebtn");
      btn3.addEventListener("click",click3);
      var btn4 = document.getElementById("profilebtn");
      btn4.addEventListener("click",click4);
      var btnd1 = document.getElementById("btnd1");
      var btnd2 = document.getElementById("btnd2");
      var btnd3 = document.getElementById("btnd3");


      btn1.style.cursor = 'pointer';
      btn2.style.cursor = 'pointer';
      btn3.style.cursor = 'pointer';
      btn4.style.cursor = 'pointer';
      btnd1.style.cursor = 'pointer';
      btnd2.style.cursor = 'pointer';
      btnd3.style.cursor = 'pointer';

      btn1.addEventListener("mouseenter",function(){hoverin(btn1)});
      btn1.addEventListener("mouseleave",function(){hoverout(btn1)});

      btn2.addEventListener("mouseenter",function(){hoverin(btn2)});
      btn2.addEventListener("mouseleave",function(){hoverout(btn2)});

      btn3.addEventListener("mouseenter",function(){hoverin(btn3)});
      btn3.addEventListener("mouseleave",function(){hoverout(btn3)});

      btn4.addEventListener("mouseenter",function(){hoverin(btn4)});
      btn4.addEventListener("mouseleave",function(){hoverout(btn4)});

      btnd1.addEventListener("mouseenter",function(){hoverin(btnd1)});
      btnd1.addEventListener("mouseleave",function(){hoverout(btnd1)});
      btnd2.addEventListener("mouseenter",function(){hoverin(btnd2)});
      btnd2.addEventListener("mouseleave",function(){hoverout(btnd2)});
      btnd3.addEventListener("mouseenter",function(){hoverin(btnd3)});
      btnd3.addEventListener("mouseleave",function(){hoverout(btnd3)});

      

      function hoverin(btn){
        gsap.to(btn, {duration: 1, scale:0.96});
        gsap.to(btn, {duration: 0.2, border: '0.2em solid white'});

      }
      function hoverout(btn){
        gsap.to(btn, {duration: 1, scale:1});
        gsap.to(btn, {duration: 0, border: 'none'});
      }
    
      function click1(){
        window.location.href = "/accueil";
      }
      function click2(){
        window.location.href = "/passager/vote";
      }
      function click3(){
        window.location.href = "/equipage";
      }
      function click4(){
        window.location.href = "/passager/authentification";
      }
    
  </script>
