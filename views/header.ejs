<script>


  
function switchmenu() {
  Haptics.vibrate(10);
  var x = document.getElementById("liens");
  if (x.style.display === "flex") {
    x.style.display = "none";
  } else {
  x.style.display = "flex";
  gsap.to("#a1h",{opacity: 0});
  gsap.to("#a2h",{opacity: 0});
  gsap.to("#a3h",{opacity: 0});
  gsap.to("#a4h",{opacity: 0});
  gsap.fromTo("#a1h",{opacity: 0, x:-200}, {duration: 0.6, opacity: 1,x:0, delay:0});
  gsap.fromTo("#a2h",{opacity: 0, x:-200}, {duration: 0.6, opacity: 1,x:0, delay:0.2});
  gsap.fromTo("#a3h",{opacity: 0, x:-200}, {duration: 0.6, opacity: 1,x:0, delay:0.4});
  gsap.fromTo("#a4h",{opacity: 0, x:-200}, {duration: 0.6, opacity: 1,x:0, delay:0.6});
  }
}
</script>
