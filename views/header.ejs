  <footer >
    <div class="reseauxSociaux">
      <a  href="https://www.instagram.com/astrunumia/?hl=fr" target="_blank"><img  id="insta"src='/img/header/instaH.png'> </a>
      <a  href="https://www.facebook.com/Astrunumia-104306377677990" target="_blank"><img id="facebook" src='/img/header/facebookH.png'></a>
      <a href="https://twitter.com/astrunumia" target="_blank"><img id="twitter" src='/img/header/twitterH.png'></a>
    </div>
    <a class="credit" href="/credits">Mentions Légales </a>
  </footer>

  <script>
    // Récupération des éléments
    var btn1 = document.getElementById("accueilbtn");
    btn1.addEventListener("click", click1);
    var btn2 = document.getElementById("votebtn");
    btn2.addEventListener("click", click2);
    var btn3 = document.getElementById("equipagebtn");
    btn3.addEventListener("click", click3);
    var btn4 = document.getElementById("profilebtn");
    btn4.addEventListener("click", click4);
    var btnd1 = document.getElementById("btnd1");
    var btnd2 = document.getElementById("btnd2");
    var btnd3 = document.getElementById("btnd3");


    // Ajout du curseur au survol
    
    btnd2.style.cursor = 'not-allowed';
    btnd3.style.cursor = 'not-allowed';



    // Ajout des événements aux éléments 
    btn1.addEventListener("mouseenter", function () { hoverin(btn1) });
    btn1.addEventListener("mouseleave", function () { hoverout(btn1) });

    btn2.addEventListener("mouseenter", function () { hoverin(btn2) });
    btn2.addEventListener("mouseleave", function () { hoverout(btn2) });

    btn3.addEventListener("mouseenter", function () { hoverin(btn3) });
    btn3.addEventListener("mouseleave", function () { hoverout(btn3) });

    btn4.addEventListener("mouseenter", function () { hoverin(btn4) });
    btn4.addEventListener("mouseleave", function () { hoverout(btn4) });

    btnd1.addEventListener("mouseenter", function () { hoverinD(btnd1) });
    btnd1.addEventListener("mouseleave", function () { hoveroutD(btnd1) });

    btnd2.addEventListener("mouseenter", function () { hoverinD(btnd2) });
    btnd2.addEventListener("mouseleave", function () { hoveroutD(btnd2) });

    btnd3.addEventListener("mouseenter", function () { hoverinD(btnd3) });
    btnd3.addEventListener("mouseleave", function () { hoveroutD(btnd3) });


   // Fonctions d'animations
    function hoverin(btn) {
      gsap.to(btn, { duration: 0.5, scale: 0.95 });

    }
    function hoverout(btn) {
      gsap.to(btn, { duration: 1, scale: 1 });
    }

    function hoverinD(btn) {
      gsap.to(btn, { duration: 0.5, scale: 1.1 });

    }
    function hoveroutD(btn) {
      gsap.to(btn, { duration: 1, scale: 1 });
    }

    function click1() {
      window.location.href = "/accueil";
    }
    function click2() {
      window.location.href = "/passager/vote";
    }
    function click3() {
      window.location.href = "/equipage";
    }
    function click4() {
      window.location.href = "/passager/authentification";
    }

  </script>
</div>

