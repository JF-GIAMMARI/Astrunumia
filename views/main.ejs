<title>Astrunumia</title>
<%- include('posthead'); -%> 

<body> <! --======================================================= Début de la page -->


  <% if (locals.cookie == undefined) { %>
    <div class="cookies">
      Pour poursuivre votre navigation sur ce site, vous devez accepté l’utilisation
       des Cookie.<br><br><a class="cookiesbtn btnsimple" href="/cookie">J'accepte</a>
  
    </div>
    <% }%>
    <style>
      .alert {
        opacity: 1;
        transition: opacity 0.6s; 
      }
      </style>
      
      <script>
      var close = document.getElementsByClassName("fermeturebtn");
      var i;
      for (i = 0; i < close.length; i++) {
        close[i].onclick = function(){
          var div = this.parentElement;
          div.style.opacity = "0";
          setTimeout(function(){ div.style.display = "none"; }, 600);
        }
      }
      </script>

                
                <% if (locals.cookie != undefined) { %>
                <img  src="img/main/logo.png" class="logo ">
                <h1 class="textelogo">ASTRUNUMIA</h1>
                <h6 class="texte">Prenez plaisir à comprendre ce qui vous entoures</h6>
                <a  href="#" id = "bouton" class="bouton btnline ">Découvrir</a>
                <%}%> 

      
      
      </body><! --======================================================= Fin -->
      </html>
      <script>
        window.onload = function() {
          gsap.fromTo(".logo",{opacity: 0, scale: 0}, {scale: 1, duration: 1, opacity: 1, delay : 0.2 });
          gsap.fromTo(".textelogo",{opacity: 0, scale: 0}, {scale: 1,duration: 1, opacity: 1, delay : 0.3});
          gsap.fromTo(".texte",{opacity: 0, scale: 0}, {scale: 1,duration: 1, opacity: 1, delay : 0.4 });
          gsap.fromTo(".bouton",{opacity: 0,y:100}, {duration: 1, opacity: 1, y:0, delay : 1.5 ,ease: " circ. out"});


          var btn = document.getElementById("bouton");
          btn.addEventListener("click",click);


          function click(){
            gsap.to(".bouton",{duration: 0.6,scale:0, opacity:0 });
            gsap.to(".texte",{duration: 0.6,scale:0, opacity:0,delay : 0.4 });
            gsap.to(".textelogo",{duration: 0.6,scale:0, opacity:0,delay : 0.6 });
            gsap.to(".logo",{duration: 0.6,scale:0, y:200, opacity:0, onComplete: redirect,delay : 0.9 });

          }
          function redirect(){
            
            //window.location.href = "/accueil";
          }
        }
      </script>

    







