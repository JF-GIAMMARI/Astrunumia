<%- include('include-prehead'); -%>
<link rel="stylesheet" type="text/css" href="/css/main.css">
<link rel="stylesheet" type="text/css" href="/css/cookie.css">
<title>Astrunumia</title>
</head>
<% if (locals.alert) { %>
<div class="alerte">
  <%=alert%>
  <span class="fermeturebtn" onclick="this.parentElement.style.display='none';">&times;</span>
</div><%}%>

<script>
  // Animation de l'encart d'alerte
  gsap.fromTo(".alerte", { opacity: 0 }, { duration: 1, opacity: 1 });
  var close = document.getElementsByClassName("fermeturebtn");
  var i;
  for (i = 0; i < close.length; i++) {
    close[i].onclick = function () {
      var div = this.parentElement;
      gsap.fromTo(".alerte", { opacity: 1 }, { duration: 1, opacity: 0 });
      setTimeout(function () { div.style.display = "none"; }, 600);
    }
  }
</script>
  

