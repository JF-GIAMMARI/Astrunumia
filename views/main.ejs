      </html>
      <script>
        // Animations des éléments de la page 
        window.onload = function () {
          gsap.fromTo(".logo", { opacity: 0, scale: 0 }, { scale: 1, duration: 1, opacity: 1, delay: 0.2 });
          gsap.fromTo(".textelogo", { opacity: 0, scale: 0 }, { scale: 1, duration: 1, opacity: 1, delay: 0.3 });
          gsap.fromTo(".texte", { opacity: 0, scale: 0 }, { scale: 1, duration: 1, opacity: 1, delay: 0.4 });
          gsap.fromTo(".bouton", { opacity: 0, y: 100 }, { duration: 1, opacity: 1, y: 0, delay: 1.5, ease: " circ. out" });

          var btn = document.getElementById("bouton");
          btn.addEventListener("click", click);

          function click() {
            Haptics.vibrate(10); // Retour Haptics
            gsap.to(".bouton", { duration: 0.6, scale: 0, opacity: 0 });
            gsap.to(".texte", { duration: 0.6, scale: 0, opacity: 0, delay: 0.4 });
            gsap.to(".textelogo", { duration: 0.6, scale: 0, opacity: 0, delay: 0.6, onComplete: redirect });
            gsap.to(".logo", { duration: 0.5, scale: 0, y: 200, opacity: 0, onComplete: redirect, delay: 0.9 });
          }
          function redirect() {
            window.location.href = "/accueil";
          }
        }
      </script>

    