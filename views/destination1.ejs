        window.onload = function () {
            var loader = document.getElementById("loader");
            gsap.to(loader, { duration: 0.1, scale: 0.5, opacity: 0, onComplete: startAffichage });
            gsap.to(window, { duration: 0.1, scrollTo: { y: 0 + getCookie('cookiepos') } });
        }

        function startAffichage() {
            loader.style.display = "none";
            var mainDiv = document.getElementsByClassName("mainDiv");
            mainDiv[0].style.display = 'flex';
            var Musique = new sound("/son/m1.mp3");
